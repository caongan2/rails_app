<div class="container">
  <div class="row text-center">
    <h1>Plan</h1>
  </div>
  <div class="row text-center">
    <div class="col-md-6">
      <h3>Plan</h3>
    </div>
    <div class="col-md-6">
      <h3>Expense</h3>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <button type="button" id="modal" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Detail
      </button>
    </div>
    <div class="col-md-4">
    </div>
  </div>
  <div class="row text-center">
    <div class="col-md-6">
      <p><%= @plan_issue.issue %></p>
    </div>
    <div class="col-md-6">
      <p><%= @plan_issue.expense %></p>
    </div>
  </div>
  <div class="row text-center">
    <h5>Created at: </h5><span><%= @plan_issue.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle"><%= @plan_issue.issue %></h5>
      </div>
      <div class="modal-body">
        <div class="row text-center">
          <div class="col-md-6">
            <p>Expense: </p>
          </div>
          <div class="col-md-6">
            <p><%= @plan_issue.expense %> / <%= @spending_plan.max %> $</p>
          </div>
        </div>
        <div class="row text-center">
          <div class="col-md-6">
            <p>Created at: </p>
          </div>
          <div class="col-md-6">
            <p><%= @plan_issue.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="modal-close" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a href="<%= export_path(@plan_issue.id, format: "pdf") %>" class="btn btn-primary" data-dismiss="modal">Export pdf</a>
        <%= link_to "Export xls", export_excel_spending_plan_index_path(format: "xls"), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function () {
      $("#modal").on('click', function () {
          $("#exampleModalCenter").modal('show')
      })

      $("#modal-close").on('click', function () {
          $("#exampleModalCenter").modal('hide')
      })
  })
</script>