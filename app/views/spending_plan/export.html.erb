<body>
<table class="table">
  <thead>
  <th colspan="2"class="text-center">
    <%= @plan_issue.issue %>
  </th>
  </thead>
  <tbody>
  <tr>
    <th scope="row">Username</th>
    <td><%= @spending_plan.user.username %></td>
  </tr>
  <tr>
    <th scope="row">Email</th>
    <td><%= @spending_plan.user.email %></td>
  </tr>
  <tr>
    <th scope="row">Spending plan</th>
    <td><%= @spending_plan.month.to_s + '/' + @spending_plan.year.to_s %></td>
  </tr>
  <tr>
    <th scope="row">Spending limit</th>
    <td><%= @spending_plan.max.to_s + ' $' %></td>
  </tr>
  <tr>
    <th scope="row">Expense</th>
    <td><%= @plan_issue.expense %> / <%= @spending_plan.max %> $</td>
  </tr>
  <tr>
    <th scope="row">Created at</th>
    <td><%= @plan_issue.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
  </tr>
  </tbody>
</table>
